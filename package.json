{
  "name": "asd-cat-cafe",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",                        
    "lint": "eslint . --ext .js --max-warnings=0",
    "smoke": "start-server-and-test \"node index.js\" http://localhost:8080 \"curl -fsS http://localhost:8080/ && curl -fsS http://localhost:8080/food\"",
    "test": "cross-env NODE_ENV=test jest --config jest.config.cjs --runInBand",   
    "coverage": "nyc --reporter=text --reporter=lcov --reporter=cobertura jest --config jest.config.cjs"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "mongoose": "^8.18.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "jest": "^30.1.3",
    "nyc": "^17.1.0",
    "start-server-and-test": "^2.0.13",
    "supertest": "^7.1.4"
  },
  "nyc": {
    "all": true,
    "include": ["**/*.js", "**/*.cjs"],             
    "exclude": ["node_modules/**", "**/__tests__/**", "public/**"],
    "checkCoverage": true,
    "branches": 70,
    "functions": 70,
    "lines": 70,
    "statements": 70
  },
  "engines": {
    "node": ">=18 <23",
    "npm": ">=9"
  }
}