{
  "name": "asd-cat-cafe",
  "version": "1.0.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "node index.js",
    "lint": "eslint . --ext .js,.cjs --max-warnings=0",
    "smoke": "start-server-and-test \"node index.js\" http://localhost:8000 \"curl -fsS http://localhost:8000/ && curl -fsS http://localhost:8000/food\"",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --config ./jest.config.js --runInBand",
    "coverage": "nyc --reporter=text --reporter=lcov --reporter=cobertura jest --config jest.config.js"
  },
  "dependencies": {
    "body-parser": "^2.2.0",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "mongoose": "^8.18.1",
    "multer": "^2.0.2",
    "serve-favicon": "^2.5.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@eslint/js": "^9.34.0",
    "babel-jest": "^30.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "ignore": "^7.0.5",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "nyc": "^17.1.0",
    "start-server-and-test": "^2.0.13",
    "supertest": "^7.1.4"
  },
  "nyc": {
    "all": true,
    "include": [
      "**/*.js",
      "**/*.cjs"
    ],
    "exclude": [
      "node_modules/**",
      "**/__tests__/**",
      "public/**"
    ],
    "checkCoverage": true,
    "branches": 70,
    "functions": 70,
    "lines": 70,
    "statements": 70
  },
  "engines": {
    "node": ">=18 <23",
    "npm": ">=9"
  }
}
